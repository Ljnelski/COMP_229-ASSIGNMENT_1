<form id = "form">    

    <!--User name-->
    <div class="form-group">
        <label for="fName">First Name</label>
        <input class="form-control" id="fname" placeholder="first name" required>

        <label for="lName">Last Name</label>
        <input class="form-control" id="lname" placeholder="last name" required>
    </div>   

    <!-- User's Email-->
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="email@example.com" required>
    </div>    

    <!-- Subject -->
    <div class="form-group">
        <label for="subject">Subject</label>
        <input class="form-control" type="text" placeholder="Subject" id="subject" required>
    </div>

    <!-- Body-->
    <div class="form-group">
        <textarea class="form-control" id="body" required></textarea>
    </div>

    <!-- Submit Button-->
    <div class="row justify-content-center">
        <button id="button" class="btn btn-light">Enter</button>
    </div>
    <script src="/scripts/formData.js"></script>
  </form>