<% if (typeof username == 'string' && username) { %>
    <a href="/movie-list/add" class="btn btn-primary">
    <i class="fas fa-plus-circle"></i>Add a Contact</a>
    <% } %>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <!-- Header Row-->
        <tr>
            <th class="text-center col-3">Contact Name</th>
            <th class="text-center col-3">Contact Number</th>
            <th class="text-center col-2">Email Address</th>
            <% if (typeof displayName == 'string' && displayName) { %>
                <th class="text-center col-2"></th>
                <th class="text-center col-2"></th>
            <% } %>
        </tr>
        <!-- Repeatable Template Row -->

        <%for (let count = 0; count < ContactList.length; count++){ %>
            <tr>
                <td class="text-center col-4"><%= ContactList[count].name %></td>
                <td class="text-center col-3"><%= ContactList[count].number %></td>
                <td class="text-center col-3"><%= ContactList[count].email %></td>                        
                 
                <% if (typeof username == 'string' && username) { %>
                    <td class="text-center col-1">
                        <a href="/movie-list/edit/<%= MovieList[count].id %>" class="btn btn-primary">
                        <i class="fas fa-pencil-alt"></i>Update</a>
                    </td>
                    <td class="text-center col-1">
                        <a href="movie-list/delete/<%= MovieList[count].id %>" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>Delete</a>
                    </td>
                <% } %>                        
            </tr>
        <% } %> 
    </table>